//java 3ms 38M
class Solution {

    public double new21Game(int N, int K, int W) {
        if(K==0) return 1.0;
        double []dp = new double[W+K];
        for(int i = K;i<=N&&i<W+K;i++)
            dp[i] = 1.0;
        for(int i = K;i<=N && i<W+K;i++)
            dp[K-1]+=dp[i]/W;
        for(int i = K-2;i>=0;i--)
            dp[i]+=dp[i+1]+(dp[i+1]-dp[i+W+1])/W;
        return dp[0];
    }
}
